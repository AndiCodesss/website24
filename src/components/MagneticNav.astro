---
// Magnetic Navigation Component
---

<nav class="magnetic-nav" id="mainNav">
  <div class="nav-container">
    <div class="nav-logo">
      <a href="/" class="logo-link">
        <span class="logo-text">AO</span>
        <span class="logo-full">Andreas Oberd√∂rfer</span>
      </a>
    </div>
    
    <div class="nav-menu" id="navMenu">
      <a href="#about" class="nav-link magnetic-link" data-text="About">
        <span>About</span>
        <div class="magnetic-bg"></div>
      </a>
      <a href="#skills" class="nav-link magnetic-link" data-text="Skills">
        <span>Skills</span>
        <div class="magnetic-bg"></div>
      </a>
      <a href="#engagement" class="nav-link magnetic-link" data-text="Interests">
        <span>Interests</span>
        <div class="magnetic-bg"></div>
      </a>
      <a href="#contact" class="nav-link magnetic-link" data-text="Contact">
        <span>Contact</span>
        <div class="magnetic-bg"></div>
      </a>
    </div>
    
    <div class="nav-actions">
      <div class="language-switcher">
        <a href="/" class="lang-link" data-lang="en">EN</a>
        <span class="lang-divider">|</span>
        <a href="/de" class="lang-link" data-lang="de">DE</a>
        <span class="lang-divider">|</span>
        <a href="/it" class="lang-link" data-lang="it">IT</a>
      </div>
      <button class="menu-toggle" id="menuToggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
  <div class="nav-indicator"></div>
</nav>

<style>
  .magnetic-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 1rem 2rem;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid var(--glass-border);
    z-index: 1000;
    transition: all var(--transition-speed) ease;
  }
  
  .magnetic-nav.scrolled {
    background: rgba(0, 0, 0, 0.95);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }
  
  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .nav-logo {
    position: relative;
    z-index: 1001;
  }
  
  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-text-primary);
    font-weight: 800;
    transition: all var(--transition-speed) ease;
  }
  
  .logo-text {
    display: inline-block;
    padding: 0.5rem 0.75rem;
    background: var(--gradient-gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 1.5rem;
    letter-spacing: -0.05em;
    font-weight: 900;
    text-shadow: 0 0 30px rgba(212, 175, 55, 0.5);
    filter: drop-shadow(0 0 20px rgba(212, 175, 55, 0.3));
  }
  
  .logo-full {
    display: none;
    font-size: 1.1rem;
    opacity: 0.9;
  }
  
  @media (min-width: 768px) {
    .logo-full {
      display: inline;
    }
  }
  
  .nav-menu {
    display: flex;
    gap: var(--space-xs);
    align-items: center;
  }
  
  .nav-link,
  .magnetic-link {
    position: relative;
    display: inline-block;
    padding: 0.75rem 1.25rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    overflow: hidden;
    border-radius: 12px;
    transition: all var(--transition-speed) ease;
  }
  
  .magnetic-link span {
    position: relative;
    z-index: 2;
    transition: color 0.3s ease;
  }
  
  .magnetic-bg {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 12px;
    background: var(--gradient-accent);
    transform: translate(-50%, -50%);
    transition: width 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275),
                height 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    z-index: 1;
  }
  
  .magnetic-link:hover .magnetic-bg {
    width: 100%;
    height: 100%;
    border-radius: 12px;
  }
  
  .magnetic-link:hover span {
    color: white;
  }
  
  .magnetic-link::before {
    content: attr(data-text);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: transparent;
    font-weight: 900;
    font-size: 1.3em;
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.3);
    text-stroke: 1px rgba(255, 255, 255, 0.3);
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
    z-index: 0;
  }
  
  .magnetic-link:hover::before {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.2);
  }
  
  .nav-indicator {
    position: absolute;
    bottom: 0;
    height: 2px;
    background: var(--gradient-accent);
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    opacity: 0;
    border-radius: 2px;
  }
  
  .nav-actions {
    display: flex;
    gap: var(--space-md);
    align-items: center;
  }

  .language-switcher {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 25px;
    transition: all var(--transition-speed) ease;
  }

  .lang-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    position: relative;
  }

  .lang-link:hover {
    color: var(--color-gold);
    background: rgba(212, 175, 55, 0.1);
  }

  .lang-link.active {
    color: var(--color-gold);
    background: rgba(212, 175, 55, 0.15);
  }

  .lang-divider {
    color: var(--glass-border);
    font-size: 0.75rem;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .language-switcher {
      padding: 0.4rem 0.8rem;
    }
    
    .lang-link {
      font-size: 0.8rem;
      padding: 0.2rem 0.4rem;
    }
  }
  
  .menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 44px;
    height: 44px;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    cursor: pointer;
    padding: 0.75rem;
    transition: all var(--transition-speed) ease;
  }
  
  @media (max-width: 768px) {
    .menu-toggle {
      display: flex;
      position: relative;
      z-index: 1001;
    }
  }
  
  .menu-toggle span {
    width: 100%;
    height: 2px;
    background: var(--color-text-secondary);
    transition: all var(--transition-speed) ease;
  }
  
  .menu-toggle.active span:nth-child(1) {
    transform: translateY(6px) rotate(45deg);
  }
  
  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }
  
  .menu-toggle.active span:nth-child(3) {
    transform: translateY(-6px) rotate(-45deg);
  }
  
  .menu-toggle:hover {
    background: rgba(212, 175, 55, 0.1);
    border-color: rgba(212, 175, 55, 0.3);
    transform: scale(1.05);
  }
  
  /* Glowing effect on hover */
  .magnetic-link:hover {
    filter: drop-shadow(0 0 20px rgba(212, 175, 55, 0.6));
  }
  
  /* Active state */
  .magnetic-link.active .magnetic-bg {
    width: 100%;
    height: 100%;
    border-radius: 12px;
  }
  
  .magnetic-link.active span {
    color: white;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .nav-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 100%;
      height: 100vh;
      background: var(--color-bg-primary);
      flex-direction: column;
      justify-content: center;
      gap: var(--space-lg);
      transition: right var(--transition-speed) ease;
      padding-top: 5rem;
    }
    
    .nav-menu.active {
      right: 0;
    }
    
    .magnetic-link {
      padding: 1rem 2rem;
      font-size: 1.25rem;
    }
  }
</style>

<script>
  // Language detection and active state
  document.addEventListener('DOMContentLoaded', () => {
    const currentPath = window.location.pathname;
    const langLinks = document.querySelectorAll('.lang-link');
    
    langLinks.forEach(link => {
      link.classList.remove('active');
      const lang = link.dataset.lang;
      
      if ((lang === 'en' && (currentPath === '/' || currentPath === '/contact')) ||
          (lang === 'de' && currentPath.startsWith('/de')) ||
          (lang === 'it' && currentPath.startsWith('/it'))) {
        link.classList.add('active');
      }
      
      // Update href based on current page
      link.addEventListener('click', (e) => {
        e.preventDefault();
        let newPath = '/';
        const isContactPage = currentPath.includes('contact');
        
        if (lang === 'de') {
          newPath = isContactPage ? '/de/contact' : '/de/';
        } else if (lang === 'it') {
          newPath = isContactPage ? '/it/contact' : '/it/';
        } else if (lang === 'en') {
          newPath = isContactPage ? '/contact' : '/';
        }
        
        window.location.href = newPath;
      });
    });
  });
  
  // Scroll effect
  window.addEventListener('scroll', () => {
    const nav = document.getElementById('mainNav');
    if (nav) {
      if (window.scrollY > 50) {
        nav.classList.add('scrolled');
      } else {
        nav.classList.remove('scrolled');
      }
    }
  });
  
  // Mobile menu toggle
  const menuToggle = document.getElementById('menuToggle');
  const navMenu = document.getElementById('navMenu');
  
  if (menuToggle && navMenu) {
    menuToggle.addEventListener('click', () => {
      menuToggle.classList.toggle('active');
      navMenu.classList.toggle('active');
    });
    
    // Close menu on link click
    navMenu.querySelectorAll('.nav-link').forEach(link => {
      link.addEventListener('click', () => {
        menuToggle.classList.remove('active');
        navMenu.classList.remove('active');
      });
    });
  }
  
  // Smooth scrolling for nav links
  document.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href');
      if (targetId && targetId.startsWith('#')) {
        const target = document.querySelector(targetId);
        if (target) {
          const navHeight = document.getElementById('mainNav').offsetHeight;
          const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - navHeight;
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      }
    });
  });
  
  // Magnetic effect using GSAP if available
  if (typeof gsap !== 'undefined') {
    class MagneticNav {
      constructor() {
        this.links = document.querySelectorAll('.magnetic-link');
        this.indicator = document.querySelector('.nav-indicator');
        this.currentLink = null;
        
        this.init();
      }
      
      init() {
        // Link interactions
        this.links.forEach(link => {
          link.addEventListener('mouseenter', (e) => {
            this.currentLink = link;
            this.updateIndicator(link);
            gsap.to(link, {
              scale: 1.05,
              duration: 0.3,
              ease: "power2.out"
            });
          });
          
          link.addEventListener('mouseleave', (e) => {
            this.currentLink = null;
            gsap.to(link, {
              scale: 1,
              x: 0,
              y: 0,
              duration: 0.3,
              ease: "power2.out"
            });
          });
          
          link.addEventListener('mousemove', (e) => {
            const rect = link.getBoundingClientRect();
            const x = e.clientX - rect.left - rect.width / 2;
            const y = e.clientY - rect.top - rect.height / 2;
            
            gsap.to(link, {
              x: x * 0.3,
              y: y * 0.3,
              duration: 0.3,
              ease: "power2.out"
            });
          });
        });
        
        // Hide indicator when not hovering
        document.querySelector('.magnetic-nav').addEventListener('mouseleave', () => {
          if (this.indicator) {
            gsap.to(this.indicator, {
              opacity: 0,
              duration: 0.3
            });
          }
        });
      }
      
      updateIndicator(link) {
        if (!this.indicator) return;
        const rect = link.getBoundingClientRect();
        const navRect = link.closest('.nav-menu').getBoundingClientRect();
        
        gsap.to(this.indicator, {
          left: rect.left - navRect.left,
          width: rect.width,
          opacity: 1,
          duration: 0.3,
          ease: "power2.out"
        });
      }
    }
    
    // Initialize on DOM load
    document.addEventListener('DOMContentLoaded', () => {
      new MagneticNav();
    });
  }
</script>

<style is:global>
  .magnetic-ripple {
    position: fixed;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.3), transparent);
    transform: translate(-50%, -50%);
    pointer-events: none;
    z-index: 999;
  }
</style>