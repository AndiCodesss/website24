---
import BaseLayout from '../layouts/BaseLayout.astro';
import HolographicProfile from '../components/HolographicProfile.astro';
import TextScramble from '../components/TextScramble.astro';

const pageTitle = "Andreas Oberdörfer";

const skills = [
  "Data Science",
  "Digital Marketing", 
  "Business Informatics",
  "Process Automation",
  "Risk Assessment",
  "Team Leadership",
  "Financial Analysis",
  "Agricultural Management"
];

const education = [
  {
    period: "Jan 2025 - May 2025",
    institution: "The Hong Kong Polytechnic University",
    degree: "Exchange Semester - BBA",
    details: "Bachelor of Business Administration exchange program",
    tags: ["International Business", "Asia Studies", "Exchange"]
  },
  {
    period: "2022 - 2025",
    institution: "WU Vienna",
    degree: "Business Informatics",
    details: "Specialisation: Data Science & Digital Marketing | Top 10% Ranking (241/2700)",
    tags: ["Data Science", "Digital Marketing", "Business"]
  },
  {
    period: "2016 - 2021", 
    institution: "Technical School of Agriculture (OFL Auer)",
    degree: "Matura",
    details: "Agricultural and environmental studies",
    tags: ["Agriculture", "Environment", "Management"]
  },
  {
    period: "2013 - 2016",
    institution: "Middle School Latsch",
    degree: "High School Diploma",
    details: "General education with focus on sciences",
    tags: ["Sciences", "Mathematics", "Languages"]
  }
];

const experience = [
  { year: "2017-today", title: "Junior CEO", company: "fasui.it", description: "Leading teams in cultivation, production & processing of apples and organic mountain herbs" },
  { year: "2024", title: "Intern - Fund Services", company: "Erste Asset Management GmbH", description: "Data reconciliation, process analysis & automation tools implementation (Power Automate)" },
  { year: "2022-23", title: "Summer Program Educator", company: "Kids Summer Program", description: "Teaching, team collaboration, safety and supervision" },
  { year: "2022", title: "AGRIOS & GlobalGAP Supervisor", company: "Agricultural Sector", description: "Risk assessment, management strategies & stakeholder communication" }
];
---

<BaseLayout title={pageTitle}>
	<section class="hero">
		<div class="hero-content">
			<HolographicProfile src="/profile-placeholder.JPG" alt="Andreas Oberdörfer" />
			<h1><TextScramble text="Andreas Oberdörfer" /></h1>
			<p class="hero-subtitle"><TextScramble text="Business Informatics Student & Junior CEO" /></p>
			<p class="hero-description">Combining data science, digital marketing & agricultural innovation</p>
			<div class="hero-cta">
				<a href="#about" class="button primary">About Me</a>
				<a href="#contact" class="button secondary">Get In Touch</a>
			</div>
		</div>
	</section>

	<div class="content-container">
		<section id="about" class="card reveal-on-scroll">
			<h2>About Me</h2>
			<p class="lead">
				I'm a 22-year-old Business Informatics student at WU Vienna, passionate about data science, digital marketing, 
				and agricultural innovation. Currently leading our family business fasui.it while pursuing my degree.
			</p>
			<p>
				From Latsch in South Tyrol, Italy, I bring a unique blend of technical expertise and hands-on business experience. 
				My multilingual background (German native, English C1, Italian B2) enhances my ability to work in diverse international environments.
			</p>
			<p>
				Beyond academics and work, I'm passionate about sports including karate, boxing, marathon running, and calisthenics. 
				I also play the drums and have been actively involved in community organizations, serving on committees for both SBJ Latsch and Bürgerkapelle Latsch.
			</p>
		</section>

		<section id="skills" class="card reveal-on-scroll">
			<h2>Skills & Expertise</h2>
			<div class="skills-grid">
				{skills.map(skill => (
					<div class="skill-card">
						<span class="skill-name">{skill}</span>
					</div>
				))}
			</div>
		</section>

		<section id="education" class="card reveal-on-scroll">
			<h2>Education</h2>
			<div class="projects-grid">
				{education.map(edu => (
					<article class="project-card">
						<h3>{edu.degree}</h3>
						<p class="company">{edu.institution} | {edu.period}</p>
						<p>{edu.details}</p>
						<div class="project-tags">
							{edu.tags.map(tag => (
								<span class="tag">{tag}</span>
							))}
						</div>
					</article>
				))}
			</div>
		</section>

		<section id="experience" class="card reveal-on-scroll">
			<h2>Professional Experience</h2>
			<div class="timeline">
				{experience.map(item => (
					<div class="timeline-item">
						<span class="year">{item.year}</span>
						<div class="timeline-content">
							<h3>{item.title}</h3>
							<p class="company">{item.company}</p>
							<p>{item.description}</p>
						</div>
					</div>
				))}
			</div>
		</section>

		<section id="engagement" class="card reveal-on-scroll">
			<h2>Community Engagement & Interests</h2>
			<div class="engagement-grid">
				<div class="engagement-item">
					<h3>Committee Roles</h3>
					<ul>
						<li>SBJ Latsch Committee Member (2018-2024) - Designing & organizing events</li>
						<li>Bürgerkapelle Latsch Committee (2018-2021) - Decision-making & strategic planning</li>
					</ul>
				</div>
				<div class="engagement-item">
					<h3>Languages</h3>
					<ul>
						<li>German (Native)</li>
						<li>English (Fluent - C1, Cambridge Advanced)</li>
						<li>Italian (B2)</li>
					</ul>
				</div>
				<div class="engagement-item">
					<h3>Sports & Hobbies</h3>
					<ul>
						<li>Martial Arts: Karate & Boxing</li>
						<li>Endurance: Marathon running & Cycling</li>
						<li>Fitness: Calisthenics</li>
						<li>Music: Drumset</li>
					</ul>
				</div>
				<div class="engagement-item">
					<h3>Interests</h3>
					<ul>
						<li>Finance & Investment</li>
						<li>Informatics & Technology</li>
						<li>Culture & Travel</li>
						<li>Sports & Music</li>
					</ul>
				</div>
			</div>
		</section>

		<section id="contact" class="card reveal-on-scroll">
			<h2>Let's Connect</h2>
			<p>I'm always excited to discuss new opportunities and innovative projects.</p>
			<div class="contact-methods">
				<a href="https://www.linkedin.com/in/andreas-oberdoerfer/" target="_blank" class="contact-link">
					LinkedIn Profile
				</a>
				<a href="mailto:oberdoerfer.andreas@gmail.com" class="contact-link">
					Send Email
				</a>
			</div>
		</section>
	</div>
</BaseLayout>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
		text-align: center;
		padding: 2rem;
	}

	.hero-content {
		position: relative;
		z-index: 10;
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		margin: 1.5rem 0 1rem;
		color: var(--color-white);
		white-space: nowrap;
		overflow: visible;
	}
	
	/* Override to use solid gold color for animated text */
	.hero h1 .text-scramble .char.revealed {
		color: #D4AF37 !important;
		-webkit-text-fill-color: #D4AF37 !important;
	}
	
	/* Apply gradient after animation completes */
	.hero h1 .text-scramble.completed {
		color: #D4AF37 !important;
		background: linear-gradient(135deg, #D4AF37 0%, #F4E5C2 50%, #D4AF37 100%) !important;
		-webkit-background-clip: text !important;
		-webkit-text-fill-color: transparent !important;
		background-clip: text !important;
	}

	.hero-subtitle {
		font-size: 1.5rem;
		color: var(--color-text-secondary);
		margin-bottom: 1rem;
	}

	.hero-description {
		color: var(--color-text-muted);
		margin-bottom: 2rem;
		font-size: 1.1rem;
	}

	.hero-cta {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.button {
		display: inline-block;
		padding: 0.875rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.button.primary {
		background: var(--gradient-gold);
		color: var(--color-black);
		border: none;
		font-weight: 700;
	}

	.button.secondary {
		background: transparent;
		color: var(--color-gold);
		border: 2px solid var(--color-gold);
	}

	.button:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
	}
	
	.button.primary:hover {
		background: linear-gradient(135deg, #F4E5C2 0%, #D4AF37 100%);
		box-shadow: 0 10px 40px rgba(212, 175, 55, 0.5);
	}
	
	.button.secondary:hover {
		background: var(--color-gold);
		color: var(--color-black);
		border-color: var(--color-gold-light);
	}

	.lead {
		font-size: 1.25rem;
		line-height: 1.7;
		color: var(--color-text-primary);
		margin-bottom: 1.5rem;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
		margin-top: 2rem;
	}

	.skill-card {
		background: rgba(212, 175, 55, 0.05);
		padding: 1.25rem;
		border-radius: 12px;
		border: 1px solid var(--glass-border);
		text-align: center;
		transition: all 0.3s ease;
		color: var(--color-gold-light);
		font-weight: 500;
	}

	.skill-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 24px rgba(212, 175, 55, 0.3);
		border-color: var(--color-gold);
		background: rgba(212, 175, 55, 0.1);
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-top: 2rem;
	}

	.project-card {
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 16px;
		padding: 1.5rem;
		transition: all 0.3s ease;
	}

	.project-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 32px rgba(212, 175, 55, 0.2);
		border-color: var(--color-gold);
	}

	.project-card h3 {
		color: var(--color-gold);
		margin-bottom: 0.75rem;
		font-size: 1.25rem;
	}

	.project-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		margin-top: 1rem;
	}

	.tag {
		padding: 0.25rem 0.75rem;
		background: rgba(212, 175, 55, 0.1);
		border: 1px solid rgba(212, 175, 55, 0.3);
		border-radius: 20px;
		font-size: 0.875rem;
		color: var(--color-gold);
	}

	.timeline {
		margin-top: 2rem;
	}

	.timeline-item {
		display: flex;
		gap: 2rem;
		margin-bottom: 2rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--glass-border);
	}

	.timeline-item:last-child {
		border-bottom: none;
	}

	.year {
		flex-shrink: 0;
		width: 60px;
		font-weight: 700;
		color: var(--color-gold);
	}

	.timeline-content h3 {
		margin-bottom: 0.5rem;
		color: var(--color-text-primary);
	}

	.company {
		color: var(--color-gold-light);
		font-weight: 600;
		margin-bottom: 0.5rem;
	}

	.contact-methods {
		display: flex;
		gap: 1rem;
		margin-top: 2rem;
		flex-wrap: wrap;
	}

	.contact-link {
		padding: 0.875rem 2rem;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 12px;
		color: var(--color-text-primary);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.contact-link:hover {
		background: rgba(212, 175, 55, 0.1);
		border-color: var(--color-gold);
		transform: translateY(-2px);
		color: var(--color-gold);
	}

	.engagement-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
		margin-top: 2rem;
	}

	.engagement-item {
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 12px;
		padding: 1.5rem;
		transition: all 0.3s ease;
	}

	.engagement-item:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 24px rgba(212, 175, 55, 0.3);
		border-color: var(--color-gold);
		background: rgba(212, 175, 55, 0.05);
	}

	.engagement-item h3 {
		color: var(--color-gold);
		margin-bottom: 1rem;
		font-size: 1.1rem;
	}

	.engagement-item ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.engagement-item li {
		padding: 0.5rem 0;
		border-bottom: 1px solid rgba(212, 175, 55, 0.1);
		color: var(--color-text-secondary);
	}

	.engagement-item li:last-child {
		border-bottom: none;
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2rem;
			white-space: normal;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.skills-grid {
			grid-template-columns: 1fr;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}

		.timeline-item {
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>