---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Contact";
---
<BaseLayout title={pageTitle}>
  <section class="hero hero-compact">
    <h1>Contact Me</h1>
  </section>
  
  <div class="content-container">
    <div class="card animate-fade-in contact-card reveal-on-scroll">
      <div class="contact-methods">
        <div class="contact-method">
          <span class="contact-icon">✉️</span>
          <p class="contact-email">oberdoerfer.andreas@gmail.com</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .hero-compact {
    min-height: 20vh;
    padding: 2rem;
  }
  
  .contact-card {
    margin-top: -1rem;
  }

  .contact-methods {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-top: 1rem;
  }
  
  .contact-method {
    flex: 1;
    min-width: 250px;
    text-align: center;
  }
  
  .contact-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: inline-block;
  }
  
  .contact-email {
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--accent);
    word-break: keep-all;
    overflow-wrap: anywhere;
    display: inline-block;
    max-width: 100%;
  }

  @media (max-width: 480px) {
    .contact-email {
      font-size: 1.1rem;
      letter-spacing: -0.2px;
    }
  }
</style> 